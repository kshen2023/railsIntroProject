<!-- app/views/cities/index.html.erb -->
<h1>List of Cities</h1>

<table>
  <thead>
    <tr>
      <th>City Name</th>
      <th>Country</th>
    </tr>
  </thead>
  <tbody>
    <% @cities.each do |city| %>
      <tr>
        <td><%= city.city_name %></td>
        <td><%= city.country.country_name %></td>
      </tr>
    <% end %>
  </tbody>
</table>
